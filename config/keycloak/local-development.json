{
    "realm": "local-development",
    "enabled": true,
    "roles": {
      "client": {
        "opensearch": [
          {
            "name": "opensearch_all_access"
          },
          {
            "name": "opensearch_default_write"
          },
          {
            "name": "opensearch_default_read"
          },
          {
            "name": "opensearch_developer"
          }
        ],
        "kafka": [
          {
            "name": "Kafka_*_describe"
          },
          {
            "name": "Kafka_*_all"
          },
          {
            "name": "Kafka_*_read"
          },
          {
            "name": "Kafka_*_write"
          }
        ],
        "schema-registry": [
          {
            "name": "sr-producer"
          }
        ],
        "custom-client": [
          $(env:DEMO_ROLES_DEFINITION)
        ]
      }
    },
    "clients": [
      {
        "clientId": "users",
        "name": "users",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "users-secret",
        "serviceAccountsEnabled": false,
        "publicClient": false,
        "optionalClientScopes": [
          "kafka",
          "schema-registry",
          "opensearch"
        ],
        "redirectUris": [
          "*"
        ]
      },
      {
        "clientId": "default-write",
        "name": "default-write",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "default-write-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "kafka",
          "schema-registry",
          "opensearch"
        ]
      },
      {
        "clientId": "default-read",
        "name": "default-read",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "default-read-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "kafka",
          "schema-registry",
          "opensearch"
        ]
      },
      {
        "clientId": "default-access",
        "name": "default-access",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "default-access-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "opensearch",
          "kafka",
          "schema-registry"
        ]
      },
      {
        "clientId": "kafka-admin",
        "name": "kafka-admin",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "kafka-admin-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "kafka",
          "schema-registry"
        ]
      },
      {
        "clientId": "opensearch-admin",
        "name": "opensearch-admin",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "opensearch-admin-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "opensearch"
        ]
      },
      {
        "clientId": "redpanda",
        "name": "redpanda",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "redpanda-secret",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "optionalClientScopes": [
          "kafka",
          "schema-registry"
        ]
      },
      {
        "clientId": "opensearch",
        "name": "opensearch"
      },
      {
        "clientId": "kafka",
        "name": "kafka"
      },
      {
        "clientId": "schema-registry",
        "name": "schema-registry"
      },
      {
        "clientId": "custom-client",
        "name": "custom-client"
      },
      {
        "clientId": "$(env:DEMO_CLIENT_NAME)",
        "name": "$(env:DEMO_CLIENT_NAME)",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "$(env:DEMO_CLIENT_SECRET)",
        "serviceAccountsEnabled": true,
        "publicClient": false,
        "defaultClientScopes": ["custom-client"]
      }
    ],
    "users": [
      {
        "username": "developer",
        "enabled": true,
        "credentials": [
          {
            "type": "password",
            "value": "developer",
            "temporary": false
          }
        ],
        "clientRoles": {
          "opensearch": [
            "opensearch_default_read",
            "opensearch_developer"
          ],
          "kafka": [
            "Kafka_*_all"
          ],
          "schema-registry": [
            "sr-producer"
          ]
        }
      },
      {
        "username": "service-account-default-access",
        "enabled": true,
        "serviceAccountClientId": "default-access",
        "clientRoles": {
          "opensearch": [
            "opensearch_all_access"
          ],
          "kafka": [
            "Kafka_*_all"
          ],
          "schema-registry": [
            "sr-producer"
          ]
        }
      },
      {
        "username": "service-account-kafka-admin",
        "enabled": true,
        "serviceAccountClientId": "kafka-admin",
        "clientRoles": {
          "kafka": [
            "Kafka_*_all"
          ],
          "schema-registry": [
            "sr-producer"
          ]
        }
      },
      {
        "username": "service-account-default-write",
        "enabled": true,
        "serviceAccountClientId": "default-write",
        "clientRoles": {
          "kafka": [
            "Kafka_*_write"
          ],
          "opensearch": [
            "opensearch_default_write"
          ],
          "schema-registry": [
            "sr-producer"
          ]
        }
      },
      {
        "username": "service-account-default-read",
        "enabled": true,
        "serviceAccountClientId": "default-read",
        "clientRoles": {
          "kafka": [
            "Kafka_*_read"
          ],
          "opensearch": [
            "opensearch_default_read"
          ]
        }
      },
      {
        "username": "service-account-opensearch-admin",
        "enabled": true,
        "serviceAccountClientId": "opensearch-admin",
        "clientRoles": {
          "opensearch": [
            "opensearch_all_access"
          ]
        }
      },
      {
        "username": "service-account-redpanda",
        "enabled": true,
        "serviceAccountClientId": "redpanda",
        "clientRoles": {
          "kafka": [
            "Kafka_*_all"
          ],
          "schema-registry": [
            "sr-producer"
          ]
        }
      },
      {
        "username": "service-account-$(env:DEMO_CLIENT_NAME)",
        "enabled": true,
        "serviceAccountClientId": "$(env:DEMO_CLIENT_NAME)",
        "clientRoles":
        {
          "custom-client": $(env:DEMO_CLIENT_ROLES)
        }
      }
    ],
    "clientScopes": [
      {
        "name": "opensearch",
        "protocol": "openid-connect",
        "protocolMappers": [
          {
            "name": "client roles",
            "protocol": "openid-connect",
            "protocolMapper": "oidc-usermodel-client-role-mapper",
            "consentRequired": false,
            "config": {
              "multivalued": "true",
              "access.token.claim": "true",
              "id.token.claim": "true",
              "claim.name": "roles",
              "jsonType.label": "String",
              "usermodel.clientRoleMapping.clientId": "opensearch"
            }
          }
        ]
      },
      {
        "name": "kafka",
        "protocol": "openid-connect",
        "protocolMappers": [
          {
            "name": "client roles",
            "protocol": "openid-connect",
            "protocolMapper": "oidc-usermodel-client-role-mapper",
            "config": {
              "multivalued": "true",
              "access.token.claim": "true",
              "id.token.claim": "true",
              "claim.name": "roles",
              "jsonType.label": "String",
              "usermodel.clientRoleMapping.clientId": "kafka"
            }
          }
        ]
      },
      {
        "name": "schema-registry",
        "protocol": "openid-connect",
        "protocolMappers": [
          {
            "name": "client roles",
            "protocol": "openid-connect",
            "protocolMapper": "oidc-usermodel-client-role-mapper",
            "config": {
              "multivalued": "true",
              "access.token.claim": "true",
              "id.token.claim": "true",
              "claim.name": "roles",
              "jsonType.label": "String",
              "usermodel.clientRoleMapping.clientId": "schema-registry"
            }
          }
        ]
      },
      {
        "name": "custom-client",
        "protocol": "openid-connect",
        "protocolMappers": [
          {
            "name": "client roles",
            "protocol": "openid-connect",
            "protocolMapper": "oidc-usermodel-client-role-mapper",
            "config": {
              "multivalued": "true",
              "access.token.claim": "true",
              "id.token.claim": "true",
              "claim.name": "roles",
              "jsonType.label": "String",
              "usermodel.clientRoleMapping.clientId": "custom-client"
            }
          }
        ]
      }
    ],
    "defaultDefaultClientScopes": [
      "custom-client"
    ],
    "defaultOptionalClientScopes": [
      "opensearch",
      "kafka",
      "schema-registry"
    ]
  }