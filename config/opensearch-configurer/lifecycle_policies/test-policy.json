{
    "policy": {
      "description": "hot delete workflow",
      "default_state": "hot",
      "schema_version": 1,
      "ism_template": {
        "index_patterns": [
          "transformandstore*"
        ],
        "priority": 100
      },
      "states": [
        {
          "name": "hot",
          "transitions": [
            {
              "state_name": "delete",
              "conditions": {
                "min_index_age": "3d"
              }
            }
          ]
        },
        {
          "name": "delete",
          "actions": [
            {
              "delete": {}
            }
          ]
        }
      ]
    }
  }
  