{
  "index_patterns": [
    "otto-reading*"
  ],
  "composed_of": [
    "shared_template"
  ],
  "template": {
    "settings": {
      "codec": "best_compression",
      "number_of_replicas": 1,
      "index.lifecycle.name": "otto-reading-policy",
      "index.routing.allocation.include._tier_preference": "data_hot,data_warm"
    },
    "mappings": {
      "dynamic": "true",
      "_source": {
        "enabled": true
      },
      "dynamic_templates": [],
      "properties": {
        "deviceId": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date"
        }
      }
    }
  }
}